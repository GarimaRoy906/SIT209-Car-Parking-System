<!DOCTYPE html>
<html>
<head>
	<title>Contact Us - My Car Parking System</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
	<nav class="navbar navbar-expand-md navbar-light bg-light">
		<a class="navbar-brand" href="/home">My Car Parking System</a>
	</nav>

	<!-- Main section -->
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<div class="card-body">
						<h1 class="card-title text-center mb-4">Contact Us</h1>
						<form action="/user/contact-us" method="POST">
							<div class="form-group">
								<label for="name">Name</label>
								<input type="text" class="form-control" id="name" name="name" placeholder="Enter your name">
							</div>
							<div class="form-group">
								<label for="email">Email address</label>
								<input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
							</div>
							<div class="form-group">
								<label for="subject">Subject for Querry</label>
								<input type="text" class="form-control" id="subject" name="subject" placeholder="Enter your subject">
							</div>
							<div class="form-group">
								<label for="message">Message</label>
								<textarea class="form-control" id="message" rows="5" name="message" placeholder="Enter your message"></textarea>
							</div>
							<button type="submit" class="btn btn-primary btn-block">Submit</button>
						</form>
						<p class="mt-3 text-center"><a href="/home">Back to Home</a></p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
</body>
</html>